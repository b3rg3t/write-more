{
  "name": "write-more-api",
  "version": "1.0.0",
  "description": "Backend for Write More application using Express.js",
  "main": "server/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon index.ts",
    "dev:debug": "nodemon --exec node --inspect=9229 -r ts-node/register index.ts",
    "debug": "node --inspect=9229 -r ts-node/register index.ts",
    "dev:all": "concurrently \"npm run dev --prefix api\" \"npm run dev --prefix client\"",
    "build:all": "npm run build --prefix api && npm run build --prefix client",
    "start:all": "npm run start --prefix api"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongodb": "^7.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^25.0.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.2"
  }
}
